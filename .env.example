# Application Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8004

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/real_estate_db
MONGODB_URL=mongodb://localhost:27017/real_estate_db
REDIS_URL=redis://localhost:6379/0

# Real Estate Data APIs
ZILLOW_API_KEY=your-zillow-api-key
REDFIN_API_KEY=your-redfin-api-key
REALTOR_COM_API_KEY=your-realtor-com-api-key
RENTALS_COM_API_KEY=your-rentals-com-api-key
MLS_API_KEY=your-mls-api-key

# Property Data Sources
PROPERTY_RADAR_API_KEY=your-property-radar-api-key
ATTOM_DATA_API_KEY=your-attom-data-api-key
CORELOGIC_API_KEY=your-corelogic-api-key
RIS_MEDIA_API_KEY=your-ris-media-api-key

# Geographic and Mapping APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_API_KEY=your-mapbox-api-key
CENSUS_API_KEY=your-census-api-key
WALK_SCORE_API_KEY=your-walk-score-api-key

# Economic Data APIs
FRED_API_KEY=your-fred-api-key
BLS_API_KEY=your-bls-api-key
MORTGAGE_RATES_API_KEY=your-mortgage-rates-api-key
CONSTRUCTION_DATA_API_KEY=your-construction-data-api-key

# Machine Learning Configuration
ML_MODEL_PATH=./models/
ML_DATA_PATH=./data/
ML_RETRAIN_INTERVAL=24h
ML_BATCH_SIZE=32
ML_EPOCHS=100

# Property Valuation
VALUATION_MODEL=ensemble
CONFIDENCE_THRESHOLD=0.8
MARKET_ADJUSTMENT_FACTOR=1.05
SEASONAL_ADJUSTMENT=true
COMPARABLES_RADIUS_MILES=2.0

# Investment Analysis
MIN_ROI_THRESHOLD=0.08
MAX_CAP_RATE=0.12
CASH_ON_CASH_MIN=0.06
DEBT_SERVICE_COVERAGE_MIN=1.25
LOAN_TO_VALUE_MAX=0.8

# Market Analysis
MARKET_TRENDS_LOOKBACK_MONTHS=36
PRICE_APPRECIATION_THRESHOLD=0.05
INVENTORY_LEVELS_THRESHOLD=3.0
DAYS_ON_MARKET_THRESHOLD=45

# Risk Assessment
MARKET_VOLATILITY_THRESHOLD=0.15
ECONOMIC_RISK_WEIGHT=0.3
LOCATION_RISK_WEIGHT=0.4
PROPERTY_RISK_WEIGHT=0.3

# Power BI Integration
POWERBI_CLIENT_ID=your-powerbi-client-id
POWERBI_CLIENT_SECRET=your-powerbi-client-secret
POWERBI_TENANT_ID=your-powerbi-tenant-id

# Geospatial Analysis
SPATIAL_ANALYSIS_ENABLED=true
DEMOGRAPHIC_ANALYSIS_ENABLED=true
SCHOOL_DISTRICT_ANALYSIS=true
CRIME_DATA_ANALYSIS=true
TRANSPORTATION_ANALYSIS=true

# Image Processing
PROPERTY_IMAGE_ANALYSIS=true
COMPUTER_VISION_ENABLED=true
VIRTUAL_STAGING_ENABLED=true
DAMAGE_ASSESSMENT_ENABLED=true

# Market Forecasting
FORECAST_HORIZON_MONTHS=24
PRICE_FORECAST_ENABLED=true
RENTAL_FORECAST_ENABLED=true
DEMAND_FORECAST_ENABLED=true

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=real-estate-data-bucket

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
MODEL_TRACKING_URI=http://localhost:5000

# Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATIONS_ENABLED=true

# Development
TESTING_MODE=true
AUTO_RELOAD=true